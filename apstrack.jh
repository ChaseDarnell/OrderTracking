
application {
  config {
    baseName OrderTracking,
    applicationType monolith,
    packageName com.apsorders.orders,
    authenticationType jwt,
    prodDatabaseType mysql,
    clientFramework angular
  }
  entities *
}

entity Order {
	driver String required,
    pickUpDate ZonedDateTime required,
    repairDate ZonedDateTime,
    deliveryDate ZonedDateTime,
    rOrderNum String required unique,
    invOrderNum String unique,
    statusO StatusO,
    notes String
    
}

entity Customer {
    name String required,
    locale String required unique,
    notes String,
}

entity Piece {
	serial String required,
    model String required,
    desc String,
    manu String required,
    notes String,
    statusP StatusP
    
}

relationship OneToMany {
  Order to Piece
  Customer to Order
}

relationship ManyToOne {
  Piece to Order
}

enum StatusO {
	PICKED_UP,
    TBR,
    OB,
    REPAIRED,
    OFD,
    DELIVERED
}

enum StatusP {
	TBR,
    HOLDREFURB,
    HOLDREPAIR,
    REFURBBED,
    REPAIRED
}
    